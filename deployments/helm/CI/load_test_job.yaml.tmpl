apiVersion: batch/v1
kind: Job
metadata:
  name: papyrus-XXX-load-test
  namespace: papyrus
spec:
  template:
    spec:
      securityContext:
        fsGroup: 1000
      containers:
        - name: papyrus-load-test
          image: ghcr.io/starkware-libs/papyrus:dev
          imagePullPolicy: Always
          command:
            - /app/target/release/papyrus_load_test
            - --host
            - http://papyrus-XXX-rpc.papyrus.svc.cluster.local:8080
            - --run-time
            - DURRATION
      imagePullSecrets:
        - name: regcred
      restartPolicy: Never
  backoffLimit: 0
